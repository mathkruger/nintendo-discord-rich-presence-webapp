{
  "name": "nintendo-discord-rich-presence-webapp",
  "version": "0.0.0",
  "main": "app.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "init": "ng build --base-href ./ && npm run init:server",
    "install-dependencies:server": "cd server && npm install",
    "create-config:server": "cd server && cp config.sample.json config.json",
    "init:server": "git subtree add --prefix server https://github.com/mathkruger/nintendo-discord-rich-presence-server.git master --squash && npm run install-dependencies:server && npm run create-config:server",
    "update:server": "git subtree pull --prefix server https://github.com/mathkruger/nintendo-discord-rich-presence-server.git master --squash && npm run install-dependencies:server",
    "start:electron": "npm run update:server && electron .",
    "move-bundled-server:electron": "mv resources/app/server ./server",
    "start-and-build:electron": "ng build --base-href ./ && npm run start:electron",
    "create-bundle-linux:electron": "npx electron-packager . --platform=linux --arch=x64 nintendo-rich-presence --out out",
    "package-linux:electron": "npm run create-bundle-linux:electron && cd ./out/nintendo-rich-presence-linux-x64 && npm run move-bundled-server:electron",
    "create-bundle-windows:electron": "npx electron-packager . --platform=win32 --arch=x64 nintendo-rich-presence --out out",
    "package-windows:electron": "npm run create-bundle-windows:electron && cd ./out/nintendo-rich-presence-win32-x64 && npm run move-bundled-server:electron"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.1.2",
    "@angular/common": "~12.1.2",
    "@angular/compiler": "~12.1.2",
    "@angular/core": "~12.1.2",
    "@angular/forms": "~12.1.2",
    "@angular/platform-browser": "~12.1.2",
    "@angular/platform-browser-dynamic": "~12.1.2",
    "@angular/router": "~12.1.2",
    "rxjs": "~6.6.0",
    "tslib": "^2.2.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.1.2",
    "@angular/cli": "~12.1.2",
    "@angular/compiler-cli": "~12.1.2",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "electron": "^18.1.0",
    "electron-packager": "^15.5.1",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.3.2"
  }
}
